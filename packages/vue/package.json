{
  "name": "@monorepo-starter/vue",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./index.d.ts"
    }
  },
  "files": [
    "dist",
    "index.d.ts"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && vite build",
    "dev": "vite",
    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@vitejs/plugin-vue": "^4.5.0",
    "typescript": "^5.3.3",
    "vite": "^4.5.0",
    "vitest": "^1.2.2",
    "vue-tsc": "^1.8.27"
  }
}
